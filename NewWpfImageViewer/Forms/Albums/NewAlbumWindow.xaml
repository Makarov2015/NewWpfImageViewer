<Window x:Class="NewWpfImageViewer.Forms.Albums.NewAlbumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewWpfImageViewer.Forms.Albums"
        mc:Ignorable="d"
        Title="NewAlbumWindow" Height="200" Width="300" ResizeMode="NoResize" >
    <Grid>
        <StackPanel Margin="5,5,5,35" Width="auto" Height="auto">
            <Label HorizontalAlignment="Center" Content="Тип альбома"></Label>
            <ComboBox x:Name="TypeComboBox"/>
            <Label HorizontalAlignment="Center" Content="Название альбома"></Label>
            <TextBox x:Name="NameTextBox" Height="25"/>
            <Label HorizontalAlignment="Center" Content="Описание выбранного типа альбома"></Label>
        </StackPanel>
        <Button x:Name="SaveButton" Width="100" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Content="Сохранить" Click="SaveButton_Click"/>
    </Grid>
</Window>
