<UserControl x:Class="NewWpfImageViewer.Forms.Favorites.AddFolderButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Button x:Name="AddButton" Width="140" Padding="0" Margin="5" BorderThickness="0" Click="AddButton_Click">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="1" Background="CadetBlue">
                    <Label x:Name="NameLabel" VerticalAlignment="Center" HorizontalAlignment="Center">ADD</Label>
                </Grid>
            </Grid>
        </Button>
    </Grid>
</UserControl>
