<UserControl x:Class="NewWpfImageViewer.ClassDir.FolderButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewWpfImageViewer.ClassDir"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <Button x:Name="MainButton" Width="290" Padding="0" Margin="5" BorderThickness="0" Click="MainButton_Click">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="95"/>
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="290"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Background="Transparent">
                    <Image/>
                </Grid>
                <Grid Grid.Row="1" Background="CadetBlue">
                    <Label x:Name="NameLabel" VerticalAlignment="Center" HorizontalAlignment="Center">default</Label>
                </Grid>
            </Grid>
        </Button>
    </Grid>
</UserControl>
